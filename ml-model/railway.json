{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pip install -r requirements.txt",
    "watchPatterns": [
      "**/*.py",
      "requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "python serve.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
