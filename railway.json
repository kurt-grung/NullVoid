{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "npm ci && npm run build && npm run api:build",
    "watchPatterns": [
      "packages/api/**",
      "ts/**",
      "package.json",
      "package-lock.json"
    ]
  },
  "deploy": {
    "startCommand": "node packages/api/dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
